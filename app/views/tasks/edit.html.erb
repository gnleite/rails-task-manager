<h1>Update the task</h1>

<%= form_for(@task) do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>
  <%= f.label :details %>
  <%= f.text_field :details %><br/>
  <%= f.check_box :completed %>
  <%= f.label "Complete" %><br/>
  <%= f.submit %>
<% end %>

<%= link_to "Back to the list", tasks_path %>
